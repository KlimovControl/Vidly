@model Vidly.Models.Movie

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h1>@Model.Name</h1>

<body>
    <li> Genre: @Model.Genre.GenreName</li>
    <li> ReleaseDate: @Model.ReleaseDate.ToString("D")</li>
    <li> Date Added: @Model.DateAdded.ToString("D")</li>
    <li> Number in Stock: @Model.NumInStock</li>
</body>


