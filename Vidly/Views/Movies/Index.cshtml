@model  List<Vidly.Models.Movie>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>


    @Html.ActionLink("Add New", "New", "Movies", null, new { @class = "btn btn-primary" })


<table class="table table-stripped">
    <thead>
    <th>
        Movie
    </th>
    <th>
        Genre
    </th>
    </thead>
    <tbody>
        @foreach (var item in @Model)
        {
        <tr>
            <td>@Html.ActionLink(@item.Name, "Edit", new { id = item.id })</td>
            <td> @item.Genre.GenreName</td>
        </tr>
        }
    </tbody>
</table>



