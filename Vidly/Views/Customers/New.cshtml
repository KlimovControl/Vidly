@using Vidly.Models
@model Customer
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New customer</h2>
@* html-форма, которая по нажатию на кнопку отправляет все введенные данные запросом POST на адрес /Customers/Create.*@
@*Using блок использыется как блок Form*@

@using (Html.BeginForm("Create", "Customers"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Name, "Customer name")
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.DateOfBirth, "Customer date of birth")
        @Html.TextBoxFor(m => m.DateOfBirth, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.IsSubscribedToNewsLetter, "Subscribe to news")
        @Html.CheckBoxFor(m => m.IsSubscribedToNewsLetter, new { @class = "form-chek" })
